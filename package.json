{
    "name": "chat-backend",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeORM.",
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/express": "4.17.11",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.14.33",
        "@types/socket.io": "^2.1.13",
        "@types/uuid": "^8.3.0",
        "@typescript-eslint/eslint-plugin": "^4.17.0",
        "@typescript-eslint/parser": "^4.17.0",
        "eslint": "^7.21.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-plugin-import": "^2.22.1",
        "nodemon": "^2.0.7",
        "pm2": "^4.5.4",
        "ts-node": "9.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "bcrypt": "^5.0.1",
        "body-parser": "^1.19.0",
        "debug": "^4.3.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mysql": "^2.18.1",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^3.1.1",
        "socket.io-redis": "^6.0.1",
        "typed-rest-client": "^1.8.3",
        "typeorm": "0.2.31",
        "uuid": "^8.3.2"
    },
    "scripts": {
        "build": "tsc -p ./",
        "start": "node ./build/index.js",
        "deploy": "pm2 deploy ecosystem.config.js production setup",
        "dev-start": "ts-node src/index.ts",
        "tsc-watch": "tsc -w -p ./",
        "watch": "pm2 start ./build/index.js --no-daemon",
        "debug": "nodemon --legacy-watch --watch ./build --inspect=0.0.0.0:5858 --nolazy ./build/index.js",
        "local-watch": "nodemon --watch \"./src/**/*.ts\" --ignore \"./src/**/*.spec.ts\" --exec ts-node src/index.ts",
        "local-debug": "nodemon --watch \"./src/**/*.ts\" --ignore \"./src/**/*.spec.ts\" --exec ts-node src/index.ts --inspect=0.0.0.0:5858",
        "docker-run": "docker-compose up"
    }
}
