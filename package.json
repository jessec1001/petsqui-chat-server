{
    "name": "chat-backend",
    "version": "0.0.1",
    "description": "Awesome project developed with TypeORM.",
    "devDependencies": {
        "@types/bcrypt": "^3.0.0",
        "@types/express": "^4.17.7",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.0.23",
        "@types/socket.io": "^2.1.8",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.6.1",
        "@typescript-eslint/parser": "^3.6.1",
        "eslint": "^7.4.0",
        "eslint-config-airbnb-base": "^14.2.0",
        "eslint-plugin-import": "^2.22.0",
        "nodemon": "^2.0.4",
        "pm2": "^4.4.0",
        "ts-node": "8.10.2",
        "typescript": "^3.9.6"
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "body-parser": "^1.19.0",
        "debug": "^4.1.1",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "mysql": "^2.18.1",
        "reflect-metadata": "^0.1.13",
        "socket.io": "^2.3.0",
        "typed-rest-client": "^1.7.3",
        "typeorm": "0.2.25",
        "uuid": "^8.2.0"
    },
    "scripts": {
        "build": "tsc -p ./",
        "start": "node ./build/index.js",
        "deploy": "pm2 deploy ecosystem.config.js production setup",
        "dev-start": "ts-node src/index.ts",
        "tsc-watch": "tsc -w -p ./",
        "watch": "pm2 start ./build/index.js --no-daemon",
        "debug": "nodemon --legacy-watch --watch ./build --inspect=0.0.0.0:5858 --nolazy ./build/index.js",
        "local-watch": "nodemon --watch \"./src/**/*.ts\" --ignore \"./src/**/*.spec.ts\" --exec ts-node src/index.ts",
        "local-debug": "nodemon --watch \"./src/**/*.ts\" --ignore \"./src/**/*.spec.ts\" --exec ts-node src/index.ts --inspect=0.0.0.0:5858",
        "docker-run": "docker-compose up"
    }
}
